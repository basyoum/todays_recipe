<h3><%= @user.name %>さんの会員情報</h3>

<table class = 'table'>
  <tr>
    <td>会員ID</td>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%= @user.introduction %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td class="<%= @user.is_deleted_color %>"><%= @user.is_deleted ? '退会' : '有効' %></td>
  </tr>
  <tr>
    <td><%= link_to '編集する', edit_admin_user_path(@user), class: 'btn btn-success' %></td>
    <td><%= link_to '投稿レシピ一覧へ', admin_user_recipes_path(@user), class: 'btn btn-primary' %></td>
  </tr>
</table>