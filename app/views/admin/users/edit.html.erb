<h3><%= @user.name %>さんの会員情報編集</h3>

<%= form_with model:[:admin, @user] do |f| %>
  <table class = 'table'>
    <tr>
      <td>会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>名前</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>自己紹介</td>
      <td><%= f.text_field :introduction %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会" %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>