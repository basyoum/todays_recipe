<div class = 'container'>
  <h3>会員一覧</h3>

  <table class = 'table'>
    <thred>
      <tr>
        <td>会員ID</td>
        <td>名前</td>
        <td>自己紹介</td>
        <td>会員ステータス</td>
      </tr>
    </thred>
    
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to user.name, admin_user_path(user) %>
          </td>
          <td><%= user.introduction %></td>
          <td class = "<%= user.is_deleted_color %>"><%= user.is_deleted ? '退会' : '有効' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
