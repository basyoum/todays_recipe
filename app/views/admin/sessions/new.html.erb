<div class = 'container'>
  
  <div class = 'row'>
    <div class = 'col-md-1'></div>
    <h2>管理者ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class = 'row'>
    <div class = 'col-md-1'></div>
    <div class = 'col-md-4 my-3'>
      <div class = 'my-3'>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'admin@admin', style: 'width: 250px' %>
      </div>
      <div class = 'my-3'>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'testtest', style: 'width: 250px' %>
      </div>
      <div class = 'my-3'>
        <%= f.submit "管理者ログイン", class: 'btn btn-outline-dark' %>
      </div>
    </div>
    <div class = 'col-md-7'>
      <%= image_tag 'egg3.jpg', size: '600x600' %>
    </div>
  </div>
  <% end %>
  
  <%= render "admin/shared/links" %>
